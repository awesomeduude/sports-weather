extends layout.pug
block content
  .login
    h1 Events
    form(method='post', action='/events')
      fieldset
        label(for='title') Event Title
        input(type='text' id='title' name='title' placeholder='Enter Event Title' value=name)
      fieldset
        label(for='date') Date
        input(type='text' id='date' name='date' placeholder='Enter Date')
      fieldset
        label(for='description') Description
        input(type='text' id='description' name='description' placeholder='Enter a Description')
      fieldset
        label(for='city') City
        input(type='text' id='city' name='city' placeholder='Enter a City')
      button(type='submit') Add Event
    table.event-table
      tr
        th Events
        th Time
        th City
      each event in events
        tr
          th= event.title
          th= event.date
          th= event.city
